<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="top.codecool.demo.checkbox.Controller"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <ImageView fx:id="myImageView" fitHeight="150.0" fitWidth="200.0" layoutX="168.0" layoutY="50.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@lightbulb_01.png"/>
            </image>
        </ImageView>
        <Label fx:id="myLabel" layoutX="220.0" layoutY="216.0" text="OFF">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <CheckBox fx:id="myCheckbox" onAction="#change" layoutX="176.0" layoutY="259.0" mnemonicParsing="false" prefHeight="41.0" prefWidth="148.0" text="ON/OFF">
            <font>
                <Font size="20.0" />
            </font>
        </CheckBox>
    </children>
</AnchorPane>
